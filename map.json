{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "description": "",
  "title": {
    "text": "Distribution of Australia's import and export volume with other countries in 2018",
    "fontSize": 20,
    "color": "black"
  },
  "data": {
    "url": "country.json",
    "format": {
      "type": "topojson",
      "feature": "world"
    }
  },

  "width": 1000,
  "height": 400,
  "projection": {
    "type": "equirectangular"
  },
  "mark": {
    "type": "geoshape",
    "stroke": "gray"
  },
  "selection": {
    "select": {
      "type": "single",
      "fields": ["Indicator Type"],
      "bind": {
        "Indicator Type": {
          "input": "select",
          "options": ["Import", "Export"]
        }
      },
      "init": {"Indicator Type":"Import"}
    }
  },
  "transform": [
    {
      "lookup": "properties.name",
      "from": {
        "data": {
          "url": "2018data.csv"
        },
        "key": "Partner",
        "fields": ["Partner", "amount", "Indicator Type"]
      },
      "default": "0"
    }
  ],
  "encoding": {
    "color": {
      "condition": {
        "selection": "select",
        "field": "amount",
        "type": "quantitative",
        "scale": {
          "type": "linear",
          "domain": [0, 20000],
          "scheme": "reds"
        }
      },
      "value":"lightgray"

    },
    "tooltip": [
      {
        "field": "properties.name",
        "type": "nominal",
        "title": "Country"
      },
      {
        "field": "amount",
        "type": "quantitative",
        "title": "amount"
      }
    ]
  }
}
